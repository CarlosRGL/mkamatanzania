<header class="fixed inset-x-0 h-[105px] top-0 z-50 mx-auto text-white transition-all duration-100 max-w-screen-lg-desktop" id="header">
  <nav class="flex justify-center items-center py-8 lg:px-8" aria-label="Global">
    <div class="absolute top-3 left-4">
      <a id="logo" href="{{ site.url }}" class="hidden flex-col justify-center items-center"><img src="{{ img_folder }}/logo.png" alt="logo" class="w-48" /></a>
      <a id="logo-white" href="{{ site.url }}" class="flex flex-col justify-center items-center"><img src="{{ img_folder }}/logo-white.png" alt="logo" class="w-48" /></a>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="{{ fn('is_home') ? '#quienes-somos' : site.url ~ '#quienes-somos' }}" class="leading-6 uppercase hover:bg-[#99772E] hover:text-white transition-all duration-200 px-4 py-2 rounded-full">Quienes somos</a>
      <a href="{{ fn('is_home') ? '#destinos' : site.url ~ '#destinos' }}" class="leading-6 uppercase hover:bg-[#99772E] hover:text-white transition-all duration-200 px-4 py-2 rounded-full">Destinos</a>
      <a href="{{ fn('is_home') ? '#viajes-a-medida' : site.url ~ '#viajes-a-medida' }}" class="leading-6 uppercase hover:bg-[#99772E] hover:text-white transition-all duration-200 px-4 py-2 rounded-full">A medida</a>
      <a href="{{ site.url }}/contacto" class="leading-6 uppercase hover:bg-[#99772E] hover:text-white transition-all duration-200 px-4 py-2 rounded-full">Contacto</a>
    </div>
  </nav>
  <div class="hidden absolute right-4 top-1/2 flex-col items-center -translate-y-1/2 lg:flex">
